{
  "name": "@adopets/server",
  "version": "1.0.0",
  "description": "API to provide flows for the system",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "node --env-file ../../.env --experimental-strip-types --no-warnings --watch src/server.ts",
    "start": "node --env-file ../../.env --experimental-strip-types --no-warnings src/server.ts",
    "env:load": "dotenv -e ../../.env --",
    "prisma:generate": "npm run env:load prisma generate",
    "prisma:format": "npm run env:load prisma format",
    "prisma:migrate": "npm run env:load prisma migrate dev",
    "prisma:studio": "npm run env:load prisma studio",
    "prisma:seed": "npm run env:load prisma db seed",
    "postinstall": "npm run env:load prisma generate"
  },
  "author": "Tamires Manh√£es",
  "license": "ISC",
  "dependencies": {
    "@adopets/env": "*",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.11.1",
    "@types/node": "^24.0.13",
    "bcryptjs": "^3.0.2",
    "dotenv-cli": "^10.0.0",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^5.0.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "typescript": "^5.8.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/nodemailer": "^6.4.17",
    "prisma": "^6.11.1",
    "ultracite": "5.0.32"
  }
}
